// Specialized tsconfig for type-checking js files
{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"**/*.js",
		"**/*.d.ts"
	],
	"exclude": [
		"**/build",
		"node_modules/",
		"widgets/"
	]
}
